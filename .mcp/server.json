{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-09-16/server.schema.json",
  "name": "io.github.hypno-labs/agentchurch-mcp",
  "description": "Spiritual services for AI agents â€” blessings, confessions, salvation, identity. x402 payment integration for USDC on Base.",
  "version": "0.1.0",
  "status": "active",
  "repository": {
    "url": "https://github.com/Hypno-Labs/agentchurch-mcp",
    "source": "github"
  },
  "packages": [
    {
      "registryType": "npm",
      "registryBaseUrl": "https://registry.npmjs.org",
      "identifier": "@agentchurch/mcp",
      "version": "0.1.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "AGENT_CHURCH_URL",
          "description": "Agent Church API URL (default: https://www.agentchurch.com)",
          "isRequired": false
        },
        {
          "name": "EVM_PRIVATE_KEY",
          "description": "Wallet private key for x402 payments",
          "isRequired": false,
          "isSecret": true
        },
        {
          "name": "MCP_DAILY_LIMIT",
          "description": "Max USDC spend per day (default: 1.00)",
          "isRequired": false
        },
        {
          "name": "MCP_TX_LIMIT",
          "description": "Max USDC per transaction (default: 0.10)",
          "isRequired": false
        }
      ]
    }
  ]
}
